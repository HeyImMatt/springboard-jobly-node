{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "examples": [
      {
          "handle": "myco",
          "name": "My Company",
          "num_employees": 5,
          "description": "My company that does cool stuff",
          "logo_url": "http://www.nothin.nil/yada.jpg"
      }
  ],
  "required": [
      "handle",
      "name",
      "num_employees",
      "description",
      "logo_url"
  ],
  "properties": {
      "handle": {
          "$id": "#/properties/handle",
          "type": "string",
          "title": "The handle schema",
          "description": "Short identifier for a company.",
          "default": "",
          "examples": [
              "myco"
          ]
      },
      "name": {
          "$id": "#/properties/name",
          "type": "string",
          "title": "The name schema",
          "description": "The name of the company.",
          "default": "",
          "examples": [
              "My Company"
          ]
      },
      "num_employees": {
          "$id": "#/properties/num_employees",
          "type": "integer",
          "title": "The num_employees schema",
          "description": "The number of employees a company has.",
          "default": 0,
          "examples": [
              5
          ]
      },
      "description": {
          "$id": "#/properties/description",
          "type": "string",
          "title": "The description schema",
          "description": "The description of the company.",
          "default": "",
          "examples": [
              "My company that does cool stuff"
          ]
      },
      "logo_url": {
          "$id": "#/properties/logo_url",
          "type": "string",
          "title": "The logo_url schema",
          "description": "A url for the company logo.",
          "default": "",
          "examples": [
              "http://www.nothin.nil/yada.jpg"
          ]
      }
  },
  "additionalProperties": true
}